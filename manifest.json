{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "2.0",
  "description": "Console logs",
  "icons": {
    "128": "icon_128.png",
    "16": "icon_16.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "commands" : {
    "save-selection": {
      "global": true,
      "description": "Save a highlighted selection of text",
      "suggested_key": {
        "default": "Ctrl+Shift+8"
      }
    }
  },
  "permissions": [
    "https://en.wikipedia.org/*",
    "http://en.wikipedia.org/*",
    "activeTab",
    "tabs",
    "clipboardRead",
    "contextMenus",
    "contentSettings",
    "declarativeContent",
    "desktopCapture",
    "storage"
  ],
  "browser_action": {
    "default_title": "FOOBAR",
    "default_icon": "icon_16.png",
    "default_popup": "display.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["find.js"]
  }],
  "externally_connectable": {
    "matches": ["*://*.wikipedia.org/*"]
  }
}
